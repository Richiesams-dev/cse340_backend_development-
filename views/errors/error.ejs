<style>
    .error-container {
        text-align: center;
        padding: 3rem 1rem;
        margin: 2rem auto;
        max-width: 600px;
    }

    .error-code {
        font-size: 4rem;
        font-weight: bold;
        color: #dc3545;
        margin-bottom: 1rem;
    }

    .error-message {
        font-size: 1.25rem;
        color: #666;
        margin-bottom: 2rem;
    }

    .error-actions {
        margin-top: 2rem;
    }

    @media (max-width: 768px) {
        .error-code {
            font-size: 3rem;
        }
    }
</style>

<h1>
    <%= title %>
</h1>

<div class="error-message">
    <%- message %>
</div>